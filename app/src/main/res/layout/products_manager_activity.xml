<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/branco"
    android:gravity="center">

    <!-- Título do Formulário -->
    <TextView
        android:id="@+id/tvTitleProductForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciamento de Produto"
        android:textColor="@color/laranja"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <!-- Spinner para Seleção de Ação -->
    <Spinner
        android:id="@+id/spinnerProductActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonConfirmarAcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/branco"
        android:backgroundTint="@color/preto"
        android:text="Confirmar Ação"/>
    <!-- Campo para Nome do Produto -->
    <EditText
        android:id="@+id/fieldProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do produto"
        android:textColorHint="@color/laranja"
        android:textColor="@color/preto"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Campo para Descrição do Produto -->
    <EditText
        android:id="@+id/fieldProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do produto"
        android:textColorHint="@color/laranja"
        android:textColor="@color/preto"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Campo para Preço do Produto -->
    <EditText
        android:id="@+id/fieldProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço do produto"
        android:textColorHint="@color/laranja"
        android:textColor="@color/preto"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Botão para Adicionar Produto -->
    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Produto"
        android:textColor="@color/branco"
        android:backgroundTint="@color/laranja"
        android:layout_marginBottom="16dp"/>
</LinearLayout>